<div class="container">
  <div class="row">
    <div class="col-xs-6 col-xs-offset-3 form_background">
      <h1>Add a new cocktail</h1>
      <%= simple_form_for @cocktail do |f| %>
        <%= f.input :name %>
        <%= f.input :photo %>
        <%= f.button :submit , class: 'btn btn-primary' %>
      <% end %>
      <%= link_to "Return to cocktail menu", cocktails_path %>
    </div>
  </div>
</div>

